{% extends 'base.html.twig' %}

{% block title %}Categorie{% endblock %}
{% block bg%} {{ asset('front/assets/img/pc.jpg') }}  {% endblock %}
{% block titre1 %}Naviguez-vous{% endblock %}
{% block titre2 %}Categorie{% endblock %}

{% block content %}
    <h1>Categorie </h1>
    <div class="row">
        <div class="col-md-12">
            <div class="product-filters">
                <ul>
                    <li class="active" data-filter="*">All</li>
                    <li data-filter=".strawberry"></li>
                    <li data-filter=".berry">Pc bureau </li>
                    <li data-filter=".lemon">Pc bureau Pro</li>
                </ul>
            </div>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom_Cat</th>
                <th>Type_Cat</th>

            </tr>
        </thead>
        <tbody>
        {% for categorie in categories %}
            <tr>
                <td>{{ categorie.id }}</td>
                <td>{{ categorie.NomCat }}</td>
                <td>{{ categorie.TypeCat }}</td>

            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <!-- logo carousel -->
    	<div class="logo-carousel-section">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="logo-carousel-inner">
                            <div class="single-logo-item">
                                <img src="{{ asset('front/assets/img/company-logos/7.png') }}" alt="">
                            </div>
                            <div class="single-logo-item">
                                <img src="{{ asset('front/assets/img/company-logos/9.png') }}" alt="">
                            </div>
                            <div class="single-logo-item">
                                <img src="{{ asset('front/assets/img/company-logos/6.png') }}" alt="">
                            </div>
                            <div class="single-logo-item">
                                <img src="{{ asset('front/assets/img/company-logos/4.png') }}" alt="">
                            </div>
                            <div class="single-logo-item">
                                <img src="{{ asset('front/assets/img/company-logos/5.png') }}" alt="">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    <!-- end logo carousel -->
{% endblock %}
