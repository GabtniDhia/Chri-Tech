{% extends 'base.html.twig' %}

{% block title %}New Blog{% endblock %}
{% block bg%} {{ asset('front/assets/img/pc.jpg') }}  {% endblock %}
{% block titre1 %}BLOG{% endblock %}
{% block content %}
    {{ form_start(form) }}
    <h1>Create new Blog</h1>

    <!-- check out section -->
    <div class="checkout-section mt-150 mb-150">
        <div class="container">
            <div class="row">
                <div class="col-lg-8">
                    <div class="checkout-accordion-wrap">
                        <div class="accordion" id="accordionExample">
                            <div class="card single-accordion">
                                <div class="card-header" id="headingOne">
                                    <h5 class="mb-0">
                                        <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                            Detail du Blog
                                        </button>
                                    </h5>
                                </div>

                                <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#accordionExample">
                                    <div class="card-body">
                                        <div class="billing-address-form">

                                            <p>{{ form_errors(form.utilisateur) }}</p>
                                            <p>{{ form_widget(form.utilisateur) }}</p>
                                            <p>{{ form_errors(form.titre) }}</p>
                                            <p>{{ form_widget(form.titre) }}</p>
                                            <p>{{ form_errors(form.contenue) }}</p>
                                            <p>{{ form_widget(form.contenue) }}</p>


                                            <div style="text-align: center"> <p><input style="text-align: center" type="submit" value="Confirmer" ></p></d

                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- end check out section -->



    <a href="{{ path('blog_index') }}">back to list</a>

    {{ form_end(form) }}

{% endblock %}
