{% extends 'base.html.twig' %}


{% block title %}Register{% endblock %}
{% block bg%} {{ asset('front/assets/img/pc.jpg') }}  {% endblock %}
{% block titre1 %}Register{% endblock %}
{% block titre2 %}NESI W AHBEI{% endblock %}
{% block content %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <div class="contact-from-section mt-150 mb-150">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 mb-5 mb-lg-0">
                    <div class="form-title">
                        <h2 style="text-align: center">Formulaire D'insciption</h2>
                    </div>
                    <div id="form_status"></div>
                    <div class="contact-form">
                        <form>
                            {{ form_start(registrationForm) }}
                            <p>

                                {{ form_widget(registrationForm.nom, {label_attr: {class: 'form1'} }) }}
                                {{ form_widget(registrationForm.prenom, {label_attr: {class: 'form1'} }) }}
                            </p>
                            <p>
                                {{ form_widget(registrationForm.email, {label_attr: {class: 'form1'} }) }}
                                {{ form_widget(registrationForm.plainPassword, {
                                    class: 'form1',
                                    label: 'Password'
                                }) }}
                            </p>
                            <p><textarea name="message" id="message" cols="30" rows="10" placeholder="Message"></textarea></p>
                            {{ form_row(registrationForm.datecreation) }}
                            {{ form_row(registrationForm.agreeTerms) }}
                            <p><input style="text-align: center" type="submit" value="Submit" ></p>
                            {{ form_end(registrationForm) }}
                        </form>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="contact-form-wrap">
                        <div class="contact-form-box">
                            <h4><i class="fas fa-map"></i> Shop Address</h4>
                            <p>34/8, East Hukupara <br> Gifirtok, Sadan. <br> Country Name</p>
                        </div>
                        <div class="contact-form-box">
                            <h4><i class="far fa-clock"></i> Shop Hours</h4>
                            <p>MON - FRIDAY: 8 to 9 PM <br> SAT - SUN: 10 to 8 PM </p>
                        </div>
                        <div class="contact-form-box">
                            <h4><i class="fas fa-address-book"></i> Contact</h4>
                            <p>Phone: +00 111 222 3333 <br> Email: support@fruitkha.com</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


{% endblock %}
