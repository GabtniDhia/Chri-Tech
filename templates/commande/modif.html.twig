{% extends 'baseback.html.twig' %}
{% block title %} Espace Admin {% endblock %}
{% block titre1 %} Gestion de commande{% endblock %}

{% block content %}

    {{ form_start(form,{'attr': {'novalidate': 'novalidate'}} ) }}

    <div class="checkout-section mt-150 mb-150">
        <div class="container">
            <div class="row">
                <div class="col-lg-8">
                    <div class="checkout-accordion-wrap">
                        <div class="accordion" id="accordionExample">
                            <div class="card single-accordion">
                                <div class="card-header" id="headingOne">
                                    <h5 class="mb-0">
                                        <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                            Modifier la commande
                                        </button>
                                    </h5>
                                </div>

                                <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#accordionExample">
                                    <div class="card-body">
                                        <div class="billing-address-form">

                                            <p>{{ form_errors(form.nom) }}</p>
                                            <p>{{ form_widget(form.nom) }}</p>
                                            <p>{{ form_errors(form.numtel) }}</p>
                                            <p>{{ form_widget(form.numtel) }}</p>
                                            <p>{{ form_errors(form.email) }}</p>
                                            <p>{{ form_widget(form.email) }}</p>
                                            {{ include('commande/_form.html.twig', {'button_label': 'Modifier'}) }}
                                            {{ include('commande/supprimer.html.twig' , {'button_label': 'Annuler'}) }}
                                            <a href="{{ path('commande_afficher', {'id': commande.id}) }}">Afficher la commande</a>

                                        </div>
                                    </div>
                                </div>
                            </div>


                        </div>
                    </div>

                </div>
            </div>


        </div>
    </div>
    </div>
    {{ form_end(form) }}

{% endblock %}

