{% extends 'base.html.twig' %}

{% block title %}Commande{% endblock %}

{% block content %}
    <h1>Liste de commandes</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Identifiant</th>
                <td>{{ commande.id }}</td>
            </tr>
            <tr>
                <th>Client</th>
                <td>{{ commande.nom }}</td>
            </tr>
            <tr>
                <th>Numéro de telephone</th>
                <td>{{ commande.numtel }}</td>
            </tr>
            <tr>
                <th>Adresse e-mail</th>
                <td>{{ commande.email }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('commande_index') }}">Page précédente</a>

    <a href="{{ path('commande_edit', {'id': commande.id}) }}">Modifier la commande</a>

    {{ include('commande/_delete_form.html.twig') }}
{% endblock %}
