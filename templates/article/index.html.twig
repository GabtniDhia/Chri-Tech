{% extends 'base.html.twig' %}

{% block title %}Articles{% endblock %}
{% block bg%} {{ asset('front/assets/img/newspaper-le-monde-background-old.jpg') }}  {% endblock %}
{% block titre1 %}latest news{% endblock %}
{% block titre2 %}nouveaux articles{% endblock %}
{% block content %}



<!-- latest news -->
<div class="latest-news mt-150 mb-150">
    <div class="container">
        <div class="row">

            {% for article in articles %}
            <div class="col-lg-4 col-md-6">
                <div class="single-latest-news">
                    <a href="single-news.html"><div class="latest-news-bg news-bg-1"><img src="{{ asset('uploads/images/' ~ article.image) }}" height="200" width="330">  </div></a>
                    <div class="news-text-box">
                        <h3><a href="single-news.html">{{ article.entete }}</a></h3>
                        <p class="blog-meta">
                            <span class="author"><i class="fas fa-user"></i> {{ article.redacteur }}</span>
                            <span class="date"><i class="fas fa-calendar"></i>{{ article.date |date('d-m-Y') }}</span>
                        </p>
                        <p class="excerpt">{{ article.corp }}</p>
                        <a href="{{ path('article_show' , { 'id': article.id}) }}" class="read-more-btn">lire plus <i class="fas fa-angle-right"></i></a>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>

        <div class="row">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12 text-center">
                        <div class="pagination-wrap">
                            <ul>
                                <li><a href="#">Prev</a></li>
                                <li><a href="#">1</a></li>
                                <li><a class="active" href="#">2</a></li>
                                <li><a href="#">3</a></li>
                                <li><a href="#">Next</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end latest news -->
{% endblock %}
