{% extends 'baseback.html.twig' %}

{% block title %}Livraison index{% endblock %}

{% block body %}
    <h1>Liste de livraisons en cours</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Identifiant</th>
                <th>Adresse</th>
                <th>Code postal</th>
                <th>Ville</th>
                <th>Date de livraison</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for livraison in livraisons %}
            <tr>
                <td>{{ livraison.id }}</td>
                <td>{{ livraison.adresse }}</td>
                <td>{{ livraison.codepostal }}</td>
                <td>{{ livraison.ville }}</td>
                <td>{{ livraison.datelivraison ? livraison.datelivraison|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('livraison_show', {'id': livraison.id}) }}">Afficher/</a>
                    <a href="{{ path('livraison_edit', {'id': livraison.id}) }}">Modifier la livraison</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Aucune livraison enregistr√©e.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('livraison_new') }}">Ajouter une livraison</a>
{% endblock %}
